<!--index.wxml-->
<view class="page">

   <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{menuItems}}" wx:key="*this">
                <navigator url="" class="weui-grid" hover-class="weui-grid_active" url="../audioItems/audioItems?item={{item.str}}">
                    <view class="weui-grid__label">{{item.raw.title}}</view>
                </navigator>
            </block>
        </view>
    </view>


  <view class="page__bd page__bd_spacing">
      <view class="kind-list">
          <block wx:for="{{menu}}" wx:key="id">
              <view class="kind-list__item">
                  <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                      <view class="weui-flex__item">{{item.name}}</view>
                  </view>
                  <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
                      <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
                          <block wx:for="{{item.urls}}" wx:for-item="urls" wx:key="*this">
                              <navigator url="../audioItems/audioItems?item={{item.str}}" class="weui-cell weui-cell_access">
                                  <view class="weui-cell__bd">{{urls.title}}</view>
                                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                              </navigator>
                          </block>
                      </view>
                  </view>
              </view>
          </block>
      </view>
  </view>

</view>

